{
  "name": "pdv-desk",
  "version": "1.7.0",
  "description": "Sistema PDV Desk - Nativo para Windows",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.pdv.desktop",
    "productName": "PDV Desk",
    "win": {
      "target": "nsis",
      "icon": "imagem/build/icon.ico"
    },
    "artifactName": "PDV Desk Setup ${version}.exe",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PDV Desk",
      "installerIcon": "imagem/build/icon.ico",
      "installerSidebar": "installerSidebar.bmp"
    },
    "files": [
      "pdv-standalone.html",
      "main.js",
      "database.js",
      "package.json",
      "modelos cupom/**/*"
    ],
    "directories": {
      "output": "instalador",
      "buildResources": "build"
    }
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "sql.js": "^1.10.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  }
}
